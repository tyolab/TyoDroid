<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
 	android:weightSum="2"
    android:paddingBottom="6dp"
    android:paddingLeft="@dimen/image_text_list_padding_left"
    android:paddingRight="@dimen/image_text_list_padding_right"
    android:paddingStart="@dimen/image_text_list_padding_left"
    android:paddingEnd="@dimen/image_text_list_padding_right"     
   	android:gravity="start|center_vertical"
    >

    <TextView
        android:id="@android:id/text1"
        android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:layout_weight="1.1"
	    style="@style/TwoLineListItemColumnOneStyle"
		 />
    
    <TextView
        android:id="@android:id/text2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:paddingLeft="8dp"
	    style="@style/TwoLineListItemColumnTwoStyle"
        />
		
</LinearLayout>